<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <TypeScriptToolsVersion>2.3</TypeScriptToolsVersion>
    <RootNamespace>Toolbelt.Net.Smtp</RootNamespace>
    <DockerComposeProjectPath>..\docker-compose.dcproj</DockerComposeProjectPath>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="src\app.ts" />
    <None Remove="src\controllers\accountConfigController.ts" />
    <None Remove="src\controllers\configController.ts" />
    <None Remove="src\filters.ts" />
    <None Remove="src\models\Account.ts" />
    <None Remove="src\models\AppConfig.ts" />
    <None Remove="src\models\EndPoint.ts" />
    <None Remove="src\models\SimplifiedMail.ts" />
    <None Remove="src\services\mailAPIService.ts" />
    <None Remove="src\services\mailEventsService.ts" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.All" Version="2.0.0" />
