    <TypeScriptCompile Include="src\models\AppConfig.ts" />
    <TypeScriptCompile Include="src\models\EndPoint.ts" />
    <TypeScriptCompile Include="src\models\SimplifiedMail.ts" />
    <TypeScriptCompile Include="src\services\appConfigAPIService.ts" />
    <TypeScriptCompile Include="src\services\mailAPIService.ts" />
    <TypeScriptCompile Include="src\services\mailEventsService.ts" />
  </ItemGroup>

